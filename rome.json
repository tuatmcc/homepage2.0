{
	"$schema": "./node_modules/rome/configuration_schema.json",
	"linter": {
		"rules": {
			"recommended": true,
			"complexity": {
				"noUselessFragments": "warn"
			},
			"correctness": {
				"noUnusedVariables": "warn"
			},
			"style": {
				"noNonNullAssertion": "warn"
			}
		}
	},
	"formatter": {
		"formatWithErrors": true,
		"indentSize": 2,
		"lineWidth": 100,
		"indentStyle": "tab"
	},
	"javascript": {
		"formatter": {
			"semicolons": "always",
			"quoteProperties": "asNeeded",
			"trailingComma": "all",
			"quoteStyle": "single"
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": ["node_modules", "out", ".next", "dist", ".contentlayer", ".vscode"]
	}
}
